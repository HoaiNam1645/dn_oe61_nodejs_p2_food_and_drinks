doctype html
html
  head
    meta(charset="UTF-8")
    style.
      body {
        font-family: 'Segoe UI', Arial, sans-serif;
        background-color: #f4f6f8;
        margin: 0;
        padding: 0;
      }
      .container {
        max-width: 600px;
        margin: 30px auto;
        background: #ffffff;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        padding: 24px;
      }
      h2 {
        color: #333333;
        margin-bottom: 16px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
      }
      th, td {
        text-align: left;
        padding: 12px;
        border-bottom: 1px solid #e9ecef;
        font-size: 14px;
      }
      th {
        background-color: #f1f3f5;
        font-weight: 600;
        color: #495057;
        width: 35%;
      }
      td {
        color: #212529;
      }
      .btn {
        display: inline-block;
        padding: 10px 16px;
        background-color: #2563eb;
        color: #ffffff !important;
        text-decoration: none;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
      }
      .footer {
        font-size: 12px;
        color: #868e96;
        margin-top: 24px;
        text-align: center;
      }
  body
    .container
      h2 #{intro}
      table
        tr
          th #{labels.orderId}
          td #{order.id}
        tr
          th #{labels.user}
          td #{order.user}
        tr
          th #{labels.paymentMethod}
          td #{order.paymentMethod}
        tr
          th #{labels.totalPrice}
          td #{order.totalPrice}
        tr
          th #{labels.paymentStatus}
          td #{order.paymentStatus}
        tr
          th #{labels.createdAt}
          td #{order.createdAt}
      p
        a.btn(href=order.url) #{labels.viewOrder}
      .footer
        | Â© #{new Date().getFullYear()} Your Company. All rights reserved.
